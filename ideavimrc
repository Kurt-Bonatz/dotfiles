set clipboard+=unnamedplus           " Use the system clipboard
set relativenumber                   " Turn on relative numbers
set number                           " Force the current line number to show in the gutter
set surround                         " Emulate vim-surround

let mapleader=","                    " Map Leader as ,
:map <Leader>f :action ReformatCode<CR>

:vmap < <gv                          " Keep visual selection blocks highlighted when indenting
:vmap > >gv
:tnoremap <C-h> <C-\><C-n><C-w>h     " Navigate windows easier with Ctrl-h/j/k/l
:tnoremap <C-j> <C-\><C-n><C-w>j
:tnoremap <C-k> <C-\><C-n><C-w>k
:tnoremap <C-l> <C-\><C-n><C-w>l
:nnoremap <C-h> <C-w>h
:nnoremap <C-j> <C-w>j
:nnoremap <C-k> <C-w>k
:nnoremap <C-l> <C-w>l
